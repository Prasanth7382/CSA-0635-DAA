#include <stdio.h>
void printPattern(int n)
 {
    if (n <= 0)
        return;
        for (int i = 0; i < n; i++)
        printf("* ");
        printf("\n");
        printPattern(n - 1);
}
int main()
 {
    int rows;
        printf("Enter the number of rows for the pattern: ");
    scanf("%d", &rows);
        printPattern(rows);
    return 0;
}
